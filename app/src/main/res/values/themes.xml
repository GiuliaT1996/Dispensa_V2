<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DispensaV2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorSecondaryVariant">@color/main_blue</item>
        <item name="colorOnSecondary">@color/main_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DispensaV2.CenterAnimation">
        <item name="android:windowBackground">@drawable/fruit_icon_background</item>
    </style>

    <style name="Theme.DispensaV2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="rounded_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="backgroung_activity">
        <item name="background">@color/light_blue</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF03DAC5</item>
        <item name="colorSwitchThumbNormal">#0D4360</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">#0D4360</item>
        <item name="android:textSize">9dp</item>
    </style>
</resources>